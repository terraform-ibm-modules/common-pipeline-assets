{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["local>terraform-ibm-modules/common-dev-assets:commonRenovateConfig"],
  "group": true,
  "groupName": "all",
  "regexManagers": [
    {
      "fileMatch": ["^.github/workflows/.*.yml$"],
      "matchStrings": ["\\s+image: (?<depName>.*?)(?::(?<currentValue>.*?))?@(?<currentDigest>sha256:[a-f0-9]+)\\s"],
      "datasourceTemplate": "docker"
    }
  ],
  "packageRules": [
    {
      "description": "Only bump the docker image sha once a week, meaning we will only release a new version of common-pipeline-assets once a week. Without this schedule, it would create daily releases, which is overkill."
      "matchDatasources": ["docker"],
      "schedule": ["before 1pm on Monday"]
    }
  ]
}
